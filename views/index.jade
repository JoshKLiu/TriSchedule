doctype html
html
  head
    title= title
    != css('application')
    != css('main')
    link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Lato:900')
    link(href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css')

  body

    #head
      #banner     
        .logo TriSchedule
        #thing
          h1#brand TriSchedule

    #panelRow
      .row
        .col-md-4.panel 
          img(src='/img/icons/Calendar.png')
          span.subtitle Schedule
        .col-md-4.panel
          img(src='/img/icons/Book.png')
          span.subtitle Review
        .col-md-4.panel 
          img(src='/img/icons/Comment.png')
          span.subtitle Collaborate
      .row
        #login.col-md-4.col-md-offset-4
          a.btn.btn-primary.btn-lg(href=authUrl) Login with Facebook

    script(src='/managed/jquery/dist/jquery.min.js')
    script(src='/managed/bootstrap/dist/js/bootstrap.min.js')
    script(src='/managed/angular/angular.min.js')
